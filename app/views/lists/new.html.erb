<%= form_for @list do |f| %>
<% if @list.errors.any? %>
  <!-- o nome da variável está aparecendo antes da mensagem de erro. Como alterar? -->
  <% @list.errors.full_messages.each do |message|%>
    <%= message %>
  <% end%>
<% end %>
  <%= f.label :name, 'Nome da lista' %>
  <%= f.text_field :name %>
  <%= f.submit 'Enviar' %>
<% end %>
