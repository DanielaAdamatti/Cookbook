<%= form_for @recipe_type do |f| %>
  <% if @recipe_type.errors.any? %>
    <!-- o nome da variável está aparecendo antes da mensagem de erro. Como alterar? -->
    <% @recipe_type.errors.full_messages.each do |message|%>
      <%= message %>
    <% end%>
  <% end %>
  <%= f.label :name, 'Nome' %>
  <%= f.text_field :name %>
  <%= f.submit 'Enviar' %>
<% end %>
